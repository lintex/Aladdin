<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#393A3F"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/id_item_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/ac0" />
    <View
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:background="#2E2E32"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/id_item_back"
        android:layout_toRightOf="@+id/id_item_back"
        android:layout_toEndOf="@+id/id_item_back" />

    <TextView
        android:id="@+id/id_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/id_item_back"
        android:layout_toRightOf="@+id/id_item_back"
        android:text="@string/app_name"
        android:textColor="#eeeeee"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/id_item_more"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@mipmap/a9x" />
</RelativeLayout>